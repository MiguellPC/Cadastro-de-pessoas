@model PIM_VIII.Models.Pessoa

@{
    ViewData["Title"] = "Deletando Pessoa";
}

<div class="my-3">
    <a asp-action="Index" class="text-decoration-none">
        <span class="material-symbols-outlined align-bottom">arrow_back</span> Voltar para a Lista
    </a>
</div>

<h1>@ViewData["Title"]</h1>

<h3 class="my-3">Você tem certeza que deseja deletar essa pessoa?</h3>
<div>
    <hr />

    <form asp-action="Delete">
        <dl class="row">

            <h4>Dados Pessoais</h4>
            <input type="hidden" asp-for="ID" />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cpf)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>

            <hr />
            <h4>Endereço</h4>
            <input type="hidden" asp-for="endereco.ID" />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Logradouro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Logradouro)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Numero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Numero)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Cep)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Cep)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Bairro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Bairro)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Cidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Cidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.endereco.Estado)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.endereco.Estado)
            </dd>

            <hr />
            <h4>Telefone</h4>
            <input type="hidden" asp-for="telefones.ID" />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.telefones.Ddd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.telefones.Ddd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.telefones.Numero)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.telefones.Numero)
            </dd>
            <input type="hidden" asp-for="telefones.tipo.ID" />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.telefones.tipo.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.telefones.tipo.Tipo)
            </dd>
        </dl>
        <input type="submit" value="Deletar" class="btn btn-danger col-3" />
    </form>
</div>
